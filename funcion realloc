void accomodateStation(tStation * vec, size_t size) {
    vec = realloc(vec, size * sizeof(tStation));
}

void accomodateDestiny(tDestiny * vec, size_t size) {
    vec = realloc(vec, size * sizeof(tDestiny));
}

